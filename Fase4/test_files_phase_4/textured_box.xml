<world>
    <window width="800" height="600" />
    <camera>
        <position x="5" y="5" z="5" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="100" />
    </camera>

    <lights>
        <light type="point" posX="10" posY="10" posZ="10" />
    </lights>

    <group>

        <!-- Fundo -->
        <group>
            <transform>
                <translate x="0" y="-1.5" z="0" />
                <scale x="1" y="-1" z="1" /> <!-- Inverte a face -->
            </transform>
            <models>
                <model file="plane.3d" />
            </models>
        </group>

        <!-- Teto -->
        <group>
            <transform>
                <translate x="0" y="1.5" z="0" />
            </transform>
            <models>
                <model file="plane.3d" />
            </models>
        </group>

        <!-- Frente -->
        <group>
            <transform>
                <translate x="0" y="0" z="1.5" />
                <rotate angle="-90" x="1" y="0" z="0" />
                <scale x="1" y="-1" z="1" />
            </transform>
            <models>
                <model file="plane.3d" />
            </models>
        </group>

        <!-- TrÃ¡s -->
        <group>
            <transform>
                <translate x="0" y="0" z="-1.5" />
                <rotate angle="90" x="1" y="0" z="0" />
                <scale x="1" y="-1" z="1" />
            </transform>
            <models>
                <model file="plane.3d" />
            </models>
        </group>

        <!-- Esquerda -->
        <group>
            <transform>
                <translate x="-1.5" y="0" z="0" />
                <rotate angle="90" x="0" y="0" z="1" />
                <scale x="1" y="-1" z="1" />
            </transform>
            <models>
                <model file="plane.3d" />
            </models>
        </group>

        <!-- Direita -->
        <group>
            <transform>
                <translate x="1.5" y="0" z="0" />
                <rotate angle="-90" x="0" y="0" z="1" />
                <scale x="1" y="-1" z="1" />
            </transform>
            <models>
                <model file="box.3d" />
            </models>
        </group>

    </group>
</world>
